{
  "type": "object",
  "title": "Advanced",
  "primaryKey": "id",
  "domain": "advanced",
  "properties": [
    {
      "component": "h3",
      "children": "Example component"
    },
    {
      "name": "id",
      "label": "ID",
      "readonly": true,
      "config": {
        "grid": true,
        "sort": 1,
        "type": "action",
        "action": {
          "handler": "https://google.com",
          "target": "_blank",
          "label": "<span title='{data}'>#ID</span>"
        }
      }
    },
    {
      "component": "div",
      "class": "d-flex",
      "children": [
        {
          "name": "autocomplete",
          "label": "Autocomplete",
          "type": "autocomplete",
          "config": {
            "grid": true,
            "sort": 1,
            "type": "select"
          },
          "options": [
            {
              "value": 1,
              "label": "Jon Doe"
            },
            {
              "value": 2,
              "label": "Jane Roe"
            }
          ]
        },
        {
          "name": "dynamicselect",
          "label": "Dynamic Select",
          "type": "dynamicSelect",
          "options": [],
          "attributes": {
            "url": "/examples/advanced_data.json",
            "fieldLabel": "name",
            "fieldValue": "id",
            "wrapData": "users",
            "requestOptions": {
              "headers": {
                "app-key": "qwertyuiop"
              }
            }
          },
          "config": {
            "grid": true,
            "type": "select"
          }
        },
        {
          "name": "switch",
          "label": "Switch",
          "type": "switch",
          "config": {
            "grid": true,
            "type": "switch"
          }
        }
      ]
    },
    {
      "name": "imageText",
      "label": "ImageText",
      "type": "imageText",
      "config": {
        "grid": true,
        "type": "image"
      }
    },
    {
      "name": "image",
      "label": "Image with upload",
      "type": "image",
      "uploadUrl": "/examples/advanced_data.json",
      "validation": "mime:application/pdf",
      "accept": "application/pdf",
      "options": {
        "fieldValue": "upload"
      },
      "config": {
        "grid": true,
        "type": "image"
      }
    },
    {
      "name": "code",
      "label": "Code",
      "type": "code",
      "config": {
        "grid": true,
        "type": "expression",
        "action": {
          "template": "<code>{data}</code>"
        }
      }
    },
    {
      "name": "json",
      "label": "Json View",
      "type": "json",
      "parse": true,
      "config": {
        "grid": true,
        "type": "expression",
        "action": {
          "template": "<code>{data}</code>"
        }
      }
    },
    {
      "name": "grid",
      "label": "Grid Local",
      "type": "grid",
      "schema": {
        "api": {
          "bypassGetData": true
        },
        "properties": [
          {
            "name": "name",
            "label": "name",
            "config": {
              "grid": true
            }
          },
          {
            "name": "email",
            "label": "Email",
            "config": {
              "grid": true
            }
          }
        ]
      }
    },
    {
      "name": "gridserver",
      "label": "Grid HTTP",
      "type": "grid",
      "schema": {
        "api": {
          "rootApi": "/examples/advanced_data.json",
          "urlGetById": " ",
          "wrapData": "users",
          "wrapDataById": "users[0]"
        },
        "properties": [ 
          {
            "name": "id",
            "label": "ID",
            "config": {
              "grid": true
            }
          },
          {
            "name": "name",
            "label": "name",
            "config": {
              "grid": true
            }
          },
          {
            "name": "email",
            "label": "Email",
            "config": {
              "grid": true
            }
          }
        ]
      }
    },
    {
      "name": "address",
      "type": "object",
      "options": [
        {
          "component": "div",
          "class": "d-flex",
          "children": [
            {
              "name": "street",
              "label": "Street",
              "config": {
                "grid": true
              }
            }
          ]
        }
      ]
    },
    {
      "name": "wysiwyg",
      "label": "Wysiwyg",
      "type": "wysiwyg",
      "config": {
        "grid": true,
        "type": "html"
      }
    },
    {
      "name": "tags",
      "label": "Tags",
      "type": "tags",
      "attributes": {
        "output": "json"
      },
      "config": {
        "grid": true,
        "type": "tags"
      }
    },
    {
      "name": "created",
      "label": "Created",
      "format": "date",
      "disabled": true,
      "config": {
        "grid": true,
        "type": "date",
        "action": {
          "format": "D/M/YY \\a\\s hh:mm",
          "utc": true
        }
      }
    }
  ],
  "api": {
    "rootApi": "/examples/advanced_data.json",
    "wrapData": "rows",
    "totalData": "count",
    "wrapDataById": null,
    "bypassGetByid": true,
    "urlGet": "",
    "urlGetById": "/{id}",
    "urlPost": "/",
    "urlPatch": "/{id}",
    "urlDelete": "/{id}",
    "methodGet": "GET",
    "methodGetById": "GET",
    "methodPost": "POST",
    "methodPatch": "PUT",
    "methodDelete": "GET",
    "pagination": {
      "pageField": "page",
      "limitField": "per_page",
      "sortField": "direction",
      "sortExp": "{prop},{sort}",
      "sortAscChar": "asc",
      "sortDescChar": "desc",
      "filterField": "filter",
      "filterExp": "{prop},like,%{value}%"
    },
    "params": {
      "page": 1,
      "per_page": 20,
      "direction": "id,desc"
    },
    "headers": {
      "Accept": "application/json"
    }
  }
}